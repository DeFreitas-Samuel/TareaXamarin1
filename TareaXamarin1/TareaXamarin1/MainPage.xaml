<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaXamarin1.MainPage">

    <StackLayout>

        <Image Source="XamarinLogo"
        WidthRequest="300"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
        <Label Text="Nombre de Usuario:" x:Name="UsuarioLabel"/>
        <Entry x:Name="entry" Placeholder="Introduzca su nombre de usuario" PlaceholderColor="LightGray"/>
        <Label Text="Contraseña:" x:Name="ContrasenaLabel"/>
        <Entry x:Name="entryContrasena" Placeholder="Introduzca su contraseña" PlaceholderColor="LightGray" IsPassword="True"/>
        <Button Text="Iniciar Sesion" Clicked="OnButtonClicked"/>

    </StackLayout>

</ContentPage>
